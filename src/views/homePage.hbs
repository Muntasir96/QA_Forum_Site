<input type = "submit" value = "submit">
</form>

<p>........................................................................................................................................................................</p>

Posts<br>
<table style="width:20%">
  <tr>
    <th>_#_</th>
    <th>__________________Question__________________</th> 
    <th>___User___</th>
    <th>_______Date_______</th>
    <th>_Modify_</th>
    <th>_Delete_</th>

  </tr>
{{#each plist}}
    <tr>
        <td>{{@index}}</td>
        <td>{{Content}}</td>
